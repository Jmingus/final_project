<%= form_tag(user_mangas_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search For Manga" %>
<%= submit_tag "Search" %>
<% end %>

<table class="u-full-width">
  <thead>
  <tr>
    <th>Image</th>
    <th>Name</th>
  </tr>
  </thead>
  <tbody>
  <% @mangas.each do |elem| %>
  <tr>
    <td><%= image_tag elem.image %></td>
    <td><%= elem.name %></td>
  </tr>
  <% end %>
  </tbody>
</table>
