<% @currently_reading.take(6).each_slice(3).with_index do |elem, row| %>
		<div class="row">
			<% elem.each_with_index do |element, column| %>
      <div class="four columns">
				<div class="manga-box">
				  <% if element[0].image == 'Not Available' %>
						<div class="image-container">
						<%= image_tag "http://i.imgur.com/u0mao2c.png", class: 'image-collection' %>
						</div>
						<% else %>
						<div class="image-container">
						  <%= image_tag element[0].image, class: 'image-collection' %>
						</div>
		      <% end %>
					<label class="btn" for="<%= "manga_collection#{row}-#{column}" %>" > <%= element[0].name %></label>
				</div>
	        <input class="modal-state" id="<%= "manga_collection#{row}-#{column}" %>" type="checkbox" />
	        <div class="modal">
	          <label class="modal__bg" for="<%= "manga_collection#{row}-#{column}" %>" ></label>
	          <div class="modal__inner">
	            <label class="modal__close" for="<%= "manga_collection#{row}-#{column}" %>"></label>
	            <%= element[0].plot_summary %>
	            <div class='toggle' id='switch'>
							<%= link_to 'Favorite', switch_favorite_user_manga_path(current_user, element[0]) , method: :patch ,remote: true, class: 'toggle-text-off'%>
	              <div class='glow-comp'></div>
	              <div class='toggle-button'></div>
							<%= link_to 'Favorite', switch_favorite_user_manga_path(current_user, element[0]) , method: :patch ,remote: true,class: 'toggle-text-on'%>
	            </div>
	            <div class='toggle' id='switch2'>
		            <%= link_to 'Finished Reading', switch_finished_user_manga_path(current_user, element[0]), method: :patch,remote: true, class: 'toggle-text-off'%>
	              <div class='glow-comp'></div>
	              <div class='toggle-button'></div>
	              <%= link_to 'Finished Reading', switch_finished_user_manga_path(current_user, element[0]), method: :patch,remote: true, class: 'toggle-text-on'%>
	            </div>
            </div>
          </div>
      </div>
			<% end %>
		</div>
		<% end %>
<% if @user.mangas.count >= 6 %>
	<%= link_to 'Read More', class: 'button' %>
<% end %>