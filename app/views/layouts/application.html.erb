<!DOCTYPE html>
<html>
<head>
  <title>FinalProject</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <%= csrf_meta_tags %>
</head>
<body>
	<nav>
		<ul id="nav-menu">
		<% unless user_signed_in? %>
			<li><%= link_to root_path, class: "home fa fa-home fa-2x fa-fw" do %>
			    <span>Home</span>
					<% end %>
			</li>
		  <li><%= link_to new_user_registration_path, class:"sign-up fa fa-plus-circle fa-2x fa-fw" do %>
					<span>Sign-Up</span>
				  <% end %>
		  </li>
			<li><%= link_to new_user_session_path, class: "sign-in fa fa-sign-in fa-2x fa-fw" do %>
			    <span>Sign-In</span>
			    <% end %>
			</li>
		<% else %>
		 <li><%= link_to root_path, class: "home fa fa-home fa-2x fa-fw" do %>
		        <span>Home</span>
		      <% end %>
	   <li><%= link_to destroy_user_session_path, method: :delete, class: "sign-out fa fa-sign-out fa-2x fa-fw" do %>
	          <span>Sign-Out</span>
			   <% end %>
	   </li>
	   <li><%= link_to user_mangas_path(current_user.id), class: "manga fa fa-book fa-2x fa-fw" do %>
						<span>Manga</span>
			   <% end %>
	   </li>
			<% end %>
		</ul>
	</nav>
<%= yield %>
<br class="white-space">
</body>
</html>
