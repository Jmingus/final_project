<% provide(:title, "Sign Up") %>
<div class="container">
  <h2 class="sign-up">Animanga Sign-up</h2>
	<div class="form-groups">
		<div class="form-inputs">
		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),multipart: true) do |f| %>
		  <%= devise_error_messages! %>
			<div class="top-field">
				<%= f.input :user_name, autofocus: true, required: true, placeholder: "User Name" %>
			</div>

			<div class="field">
				<%= f.label :avatar %>
				<%= f.file_field :avatar %>
			</div>

		  <div class="field">
		    <%= f.input :email, required: true, placeholder: "Email"%>
		  </div>

		  <div class="field">
		    <%= f.input :password, autocomplete: "off", required: true, placeholder: "Password"%>
		    <% if @validatable %>
		    <em>(<%= @minimum_password_length %> characters minimum)</em>
		    <% end %><br />
		  </div>

		  <div class="field">
		    <%= f.input :password_confirmation, autocomplete: "off", required: true, placeholder: "Password Confirmation"%>
		  </div>
		</div>
		<div class="form-submit">
		  <div class="actions">
		    <%= f.submit "Sign up",class: "actions" %>
		  </div>
		</div>
		<% end %>
	</div>
</div>