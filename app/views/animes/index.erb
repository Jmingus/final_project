<% provide(:title, "Anime Search") %>
<div class="container">
	<%= form_tag(user_animes_path, :method => "get", id: "search-form") do %>
	<%= text_field_tag :search, params[:search], placeholder: "Search For Anime" %>
	<%= submit_tag "Search" %>
	<% end %>

	<table class="u-full-width">
	  <thead>
	  <tr>
	    <th>Image</th>
	    <th>Name</th>
		  <th>Add to Collection</th>
	  </tr>
	  </thead>
	  <tbody>
	  <% @paginatable_animes.each do |elem| %>
	  <tr class="collection-add">
		  <% if elem.image == 'Not Available' %>
			    <td><%= image_tag "http://i.imgur.com/u0mao2c.png", class: 'image' %></td>
			<% else %>
	    <td><div class="image-container-search"><%= image_tag elem.image, class: 'image' %></div></td>
			<% end %>
	    <td><%= elem.name %></td>
	    <td><%= link_to '', addcollection_user_anime_path(current_user.id, elem.id) , class: 'fa fa-plus-square-o fa-2x fa-collection', method: :post %></td>
	  </tr>
	  <% end %>
	  </tbody>
	</table>
	<%= paginate @paginatable_animes %>
	<%= page_entries_info @paginatable_animes %>
</div>